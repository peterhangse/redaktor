# NOTE: This .htaccess file is for Apache servers only.
# GitHub Pages does not support .htaccess files and will serve .html files directly.
# Clean URLs on GitHub Pages work by accessing the .html files directly (e.g., /om-oss.html)

RewriteEngine On
RewriteBase /

# Set default charset to UTF-8
AddDefaultCharset UTF-8

# Redirect old URLs with stil2- prefix to clean .html URLs
RewriteRule ^stil2-omoss\.html$ /om-oss.html [R=301,L]
RewriteRule ^stil2-omoss$ /om-oss.html [R=301,L]
RewriteRule ^stil2-nyheter\.html$ /nyheter.html [R=301,L]
RewriteRule ^stil2-nyheter$ /nyheter.html [R=301,L]
RewriteRule ^stil2-projekt\.html$ /projekt.html [R=301,L]
RewriteRule ^stil2-projekt$ /projekt.html [R=301,L]
RewriteRule ^stil2-kontakt\.html$ /kontakt.html [R=301,L]
RewriteRule ^stil2-kontakt$ /kontakt.html [R=301,L]
RewriteRule ^stil2-artikel1\.html$ /artikel-1.html [R=301,L]
RewriteRule ^stil2-artikel1$ /artikel-1.html [R=301,L]
RewriteRule ^stil2-artikel2\.html$ /artikel-2.html [R=301,L]
RewriteRule ^stil2-artikel2$ /artikel-2.html [R=301,L]
RewriteRule ^stil2-artikel3\.html$ /artikel-3.html [R=301,L]
RewriteRule ^stil2-artikel3$ /artikel-3.html [R=301,L]
RewriteRule ^stil2-artikel4\.html$ /artikel-4.html [R=301,L]
RewriteRule ^stil2-artikel4$ /artikel-4.html [R=301,L]
RewriteRule ^stil2-biljetter\.html$ /biljetter.html [R=301,L]
RewriteRule ^stil2-biljetter$ /biljetter.html [R=301,L]
RewriteRule ^stil2-guldspaden\.html$ /guldspaden.html [R=301,L]
RewriteRule ^stil2-guldspaden$ /guldspaden.html [R=301,L]
RewriteRule ^stil2-kurs\.html$ /kurs.html [R=301,L]
RewriteRule ^stil2-kurs$ /kurs.html [R=301,L]
RewriteRule ^stil2-stipendier\.html$ /stipendier.html [R=301,L]
RewriteRule ^stil2-stipendier$ /stipendier.html [R=301,L]

# Optional: Support clean URLs without .html extension on Apache servers
# This allows /om-oss to work as /om-oss.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]
